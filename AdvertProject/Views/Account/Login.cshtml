@using AdvertProject.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>

<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form_class", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form_div">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control field_class" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form_div">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control field_class" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <div class="form_div">

            <div class="col-md-8">
                <input type="submit" value=@Resources.Content.Login class="btn btn-default submit_class" />
            </div>

            <div class="col-md-4">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
            </div>

        </div>
        <br />
        <div class="info_div">
            <p>
                @Html.ActionLink(Resources.Content.Register, "Register")
            </p>
        </div>

        @* Enable this once you have account confirmation enabled for password reset functionality*@
        <p>
            @Html.ActionLink(Resources.Content.ForgotPasswordQuestion, "ForgotPassword")
        </p>
    }
</section>

