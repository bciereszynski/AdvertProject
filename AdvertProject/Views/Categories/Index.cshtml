@model IEnumerable<AdvertProject.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(@Resources.Content.Create, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink(@Resources.Content.Edit, "Edit", new { id = item.ID }) |
            @Html.ActionLink(@Resources.Content.Delete, "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
