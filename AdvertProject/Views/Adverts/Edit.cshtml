@model ProjectAdvert.Models.Advert

@{
    ViewBag.Title = "Edit";
}

<h2>@Resources.Content.Edit</h2>


@using (Html.BeginForm("Edit", "Adverts", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form_class", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>@Resources.Content.Advert</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.User)
    @Html.HiddenFor(model => model.UserID)
    @Html.HiddenFor(model => model.Date)
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form_div">

        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label " })
        @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control field_class" } })
        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
    </div>


    <div class="form_div">

        @Html.LabelFor(model => model.categories, "Kategorie", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownList("categories", null, htmlAttributes: new { @class = "form-control field_class", multiple = "multiple" })
        @Html.ValidationMessageFor(model => model.categories, "", new { @class = "text-danger" })
    </div>

    <div class="form_div">


        <input type="submit" value=@Resources.Content.Create class="btn btn-default" />
    </div>

    <div class="info_div">
        @Html.ActionLink(@Resources.Content.Back, "Index")
    </div>
}

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
