@model ProjectAdvert.Models.Advert

@{
    ViewBag.Title = "Details";
}

<div>
    <h4>@Resources.Content.Advert</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd class="ddContent">
            @Html.Raw(Model.Content)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.categories)
        </dt>
        <dd>
            @if (Model.categories.Count>0) {
                foreach (var category in Model.categories)
                {
                <div>@category.Category.Name </div> 
                }
            }
            else
            {
                <div>...</div>
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink(@Resources.Content.Edit, "Edit", new { id = Model.ID }, new { @Class = "btn btn-default" }) |
    @Html.ActionLink(@Resources.Content.Back, "Index", null, new { @Class = "btn btn-default" })
</p>
